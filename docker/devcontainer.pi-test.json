{
	"name": "Pi Test Workspace",
	"dockerFile": "Dockerfile.pi-test",
	"context": "..",
	"build": {
		"args": {
			"WORKSPACE": "${containerWorkspaceFolder}"
		}
	},
	"remoteUser": "ros",
	"runArgs": [
		"--platform=linux/arm64",
		"--ipc=host"
	],
	"containerEnv": {
		"ROS_DISTRO": "humble"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode.cpptools",
				"streetsidesoftware.code-spell-checker"
			]
		}
	}
}
