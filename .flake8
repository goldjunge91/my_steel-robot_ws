[flake8]
max-line-length = 120
ignore = 
    E501,  # line too long
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
    E402,  # module level import not at top of file
    F401,  # imported but unused
    W504,  # line break after binary operator
exclude = 
    .git,
    __pycache__,
    build,
    install,
    log,
    lib,
    .devcontainer,
    firmware/lib,
    src/*/build,
    src/*/install,
    src/*/log
per-file-ignores =
    __init__.py:F401
    setup.py:F401